<h1>social media app / <%= title %>
</h1>

<section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user){ %>
        <form action="/posts/create" method="POST">
                <textarea cols="30" rows="3" name="content" required="true" placeholder="Type here..."></textarea>
                <input type="submit" value="Post">
        </form>
        <% } %>
        <div id="posts-list-container">
                <ul>
                        <% for(post of posts) { %>
                                <li>
                                        <p>
                                                <%= post.content %>
                                                        <br>
                                                        <small>By <%= post.user.name %></small>
                                        </p>
                                </li>
                                <%} %>
                </ul>
        </div>
</section>